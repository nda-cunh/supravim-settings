using Gtk 4.0;
using Adw 1;

template $PluginsPage: Gtk.Box {
	orientation: vertical;
	spacing: 5;

	Adw.PreferencesPage  {
		Adw.PreferencesGroup external_group {
			styles ['PreferencesGroup']
			title: 'External Plugins';
			description: 'Install external plugins for supravim from git repositories';
		}

		Adw.PreferencesGroup plugins_group {
			styles ['PreferencesGroup']
			title: 'Suprapack Plugins';
			description: 'You can install some plugins for supravim :)';
		}
	}	
}
